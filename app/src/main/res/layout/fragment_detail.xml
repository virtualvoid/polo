<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="@dimen/default_padding">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/portal_detail_name_inplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/portal_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/portal_name"
            android:inputType="text"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/portal_detail_latitude_inplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/portal_detail_latitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/portal_latitude"
            android:inputType="numberDecimal"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/portal_detail_longitude_inplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/portal_detail_longitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/portal_longitude"
            android:inputType="numberDecimal"/>

    </android.support.design.widget.TextInputLayout>


</LinearLayout>
